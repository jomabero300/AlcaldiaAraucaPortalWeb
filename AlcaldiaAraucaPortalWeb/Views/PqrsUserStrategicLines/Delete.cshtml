@model AlcaldiaAraucaPortalWeb.Data.Entities.Alar.PqrsUserStrategicLine

@{
    ViewData["Title"] = "Delete";
}

<h1 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Borrar</h1>

<h3 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Realmente desea borrar esto?</h3>
<div>
    <h4 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Usuario y Linea estratégica</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.FullName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PqrsStrategicLine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PqrsStrategicLine.PqrsStrategicLineName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PqrsUserStrategicLineId" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i>Eliminar</button> |
        <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>
    </form>
</div>
