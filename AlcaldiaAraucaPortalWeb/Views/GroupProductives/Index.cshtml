@model IEnumerable<AlcaldiaAraucaPortalWeb.Data.Entities.Afil.GroupProductive>

@{
    ViewData["Title"] = "Index";
}


<div class="row" style="width:100%;">
    <div class="col-md-6">
        <h1 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Grupos productivos</h1>
    </div>
    <div class="col-md-6" style="text-align: end;vertical-align: middle;">
        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-file-earmark-fill"></i> Nuevo</a>
    </div>
</div>


<table id="MyTableGene" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td>@Html.DisplayFor(modelItem => item.GroupProductiveName)</td>
                <td>@Html.DisplayFor(modelItem => item.State.StateName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GroupProductiveId" class="btn btn-sm btn-warning md-2"><i class="bi bi-pencil-fill"></i> Editar</a>
                    <a asp-action="Details" asp-route-id="@item.GroupProductiveId" class="btn btn-sm btn-info md-2"><i class="bi bi-eye-fill"></i> Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.GroupProductiveId" class="btn btn-sm btn-danger md-2"><i class="bi bi-trash2-fill"></i> Elimnar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="~/js/datatable_files.js"></script>
}