@model AlcaldiaAraucaPortalWeb.Models.Gene.CarouselModelView

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borra</h1>

<h3>Realmenete desea eliminar esto?</h3>
<div>
    <h4>Imagen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageName" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i>Eliminar</button> |
        <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-double-left"></i>Retornar</a>    </form>
</div>