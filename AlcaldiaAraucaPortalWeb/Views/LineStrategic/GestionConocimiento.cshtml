@model List<AlcaldiaAraucaPortalWeb.Models.Gene.ContentModelView>;
@{
    ViewData["Title"] = "Gestion del Conocimiento";
}

<hr />
<body>
    <section>
        <div class="container-sm">
            <div class="text-center">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 mb-4">
                            <div class="card" style="width:20em;margin:10px;">
                                <a asp-controller="LineStrategic" asp-action="GeneViewHorizontalDetails" asp-route-id="@item.url" class="btn btn-sm btn-primary">
                                    <img src="@Url.Content( @item.img)" class="card-img-top g-2" />
                                </a>
                                <div class="card-body">
                                    <div class="card-title">
                                        <h2>@item.title</h2>
                                    </div>
                                    <div class="card-text">
                                        <p>@item.text</p>
                                    </div>
                                    <a asp-controller="LineStrategic" asp-action="GeneViewHorizontalDetails" asp-route-id="@item.url" class="btn btn-sm btn-primary">Más...</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>