@model AlcaldiaAraucaPortalWeb.Models.ModelsViewCont.ContentGeneViewModels;

@{
    ViewData["Title"] = "Index";
}

<style>
        #header {
        background: url(@ViewBag.RulImagen) center center / cover no-repeat;
        }
</style>

<h3 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">@ViewBag.TituloHead2</h3>

<body>
    <section>
        @foreach (var item in Model.ContentOds)
        {
            <div class="row text-center">
                <div class="col-2 justify-content-start">
                    <a href="@item.ContentOdsUrl" title="" target="_blank"><img src="@Url.Content(item.ContentOdsImg)" width="100" height="100" class="img-fluid" /></a>
                </div>
                <div class="col-8">
                    <p>@item.ContentOdsText</p>
                </div>

            </div>
        }
    </section>
    <hr />

    <section id="header" class="jumbotron text-center" style="height:350px">
    </section>
    <div class="text-center">
        <h5>@ViewBag.TituloHead</h5>
        <p class="lead">@Html.Raw(@ViewBag.SubTituloHead)</p>
        <a asp-action="GeneViewHorizontalDetails" asp-route-id="@ViewBag.url" class="btn btn-sm btn-outline-success">Ver..</a>
    </div>
    <hr />
    <section id="gallery">
        <div class="container">
            <div class="row d-flex justify-content-center text-center g-0">
                @foreach (var item in Model.Contents)
                {
                    <div class="col-lg-4 mb-4">
                        <div class="card" style="width:20em;margin:10px;">
                            <img src="@item.img" class="card-img-top" />
                            <div class="card-body">
                                <h4 class="card-title">@item.title</h4>
                                <p class="card-text text-justify">@item.text</p>

                                <a asp-action="GeneViewHorizontalDetails" asp-route-id="@item.url" class="btn btn-sm btn-outline-success">Ver..</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</body>