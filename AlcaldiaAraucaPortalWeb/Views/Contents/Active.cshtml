@model AlcaldiaAraucaPortalWeb.Data.Entities.Cont.Content

@{
    ViewData["Title"] = "Activar";
}

<h1>Activar</h1>

<h3>Realmente desea activar esto?</h3>
<div>
    <h4>Content</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">

        <div class="col-md-6 offset">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContentTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContentTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContentText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContentText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUser.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PqrsStrategicLineSectorId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PqrsStrategicLineSector.PqrsStrategicLineSectorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State.StateName)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <img src="@Url.Content(Model.ContentUrlImg)" class="img-rounded" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
    </div>
</div>

    <form asp-action="Active">
        <input type="hidden" asp-for="ContentId" />
        <input type="submit" value="Activar" class="btn btn-primary btn-sm" /> |
        <a asp-action="Index" class="btn btn-sm btn-success">Retornar</a>
    </form>
    <footer>
        <h4 style="color:white;">Avisos legales</h4>
        <a href="#" style="color:white">Política de cookies</a>
    </footer>

</div>


