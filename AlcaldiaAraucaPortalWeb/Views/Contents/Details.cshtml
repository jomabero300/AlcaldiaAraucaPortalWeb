@model AlcaldiaAraucaPortalWeb.Data.Entities.Cont.Content

@{
    ViewData["Title"] = "Details";
}

<h1 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Detalles</h1>

<div>
    <h4 class="fst-italic fw-bold text-capitalize" style="color:#3366CC;">Contenido</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ContentDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ContentDate)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ContentTitle)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ContentTitle)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ContentText)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ContentText)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ApplicationUser.FullName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.PqrsStrategicLineSectorId)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PqrsStrategicLineSector.PqrsStrategicLineSectorName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.State.StateName)
                </dd>
            </dl>
        </div>
        <div class="col-md-6 text-md-center">
            <img src="@Url.Content(Model.ContentUrlImg)" class="rounded-3" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />

        </div>
    </div>
</div>
<div>
    @if (Model.State.StateName != "Activo")
    {
        <a asp-action="Edit" asp-route-id="@Model.ContentId" class="btn btn-sm btn-warning">Editar</a>
    }
    <a asp-action="Index" class="btn btn-sm btn-success">Retornar</a>
</div>
